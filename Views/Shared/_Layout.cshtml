<!DOCTYPE html>
<html lang="pt-br">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] BodyCorp</title>
	<script type="importmap"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/App_BodyCorp.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-custom navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
					<img src="~/images/logo.png" alt="BodyCorp " class="nav-logo">
				</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">


						<li class="nav-item">
							<a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Sobre Nós</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-white" asp-controller="Home" asp-action="Index" asp-fragment="contato">Contato</a>
						</li>

						<!-- Apenas se estiver LOGADO -->
						@if (User.Identity != null && User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
								<a class="nav-link text-white" asp-controller="Clientes" asp-action="Index">Clientes</a>
							</li>

							<li class="nav-item">
								<a class="nav-link text-white" asp-controller="Produtos" asp-action="Index">Produtos</a>
							</li>

							<li class="nav-item">
								<a class="nav-link text-white" asp-controller="Compras" asp-action="Index">Compras</a>
							</li>

							<li class="nav-item">
								<a class="nav-link text-white" asp-controller="ItemCompras" asp-action="Index">Itens de Compras</a>
							</li>
						}

					</ul>

					<partial name="_LoginPartial" />
				</div>

			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - BodyCorp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
