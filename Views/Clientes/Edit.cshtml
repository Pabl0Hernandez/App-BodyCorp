@model App_BodyCorp.Models.Cliente

@{
	ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-5">

	<h1 class="fw-bold mb-4"
		style="color:#000; text-shadow:0 0 10px #00ff0a, 0 0 15px #00ff0a;">
		Editar Cliente
	</h1>

	<div class="card shadow-lg border-0 rounded-4">
		<div class="card-body p-4">

			<form asp-action="Edit">

				<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
				<input type="hidden" asp-for="ClienteId" />

				<div class="row g-3">

					<div class="col-md-6">
						<label asp-for="ClienteNome" class="form-label fw-bold"></label>
						<input asp-for="ClienteNome" class="form-control border-success shadow-sm" />
						<span asp-validation-for="ClienteNome" class="text-danger"></span>
					</div>

					<div class="col-md-6">
						<label asp-for="CNPJ" class="form-label fw-bold"></label>
						<input asp-for="CNPJ" class="form-control border-success shadow-sm" />
						<span asp-validation-for="CNPJ" class="text-danger"></span>
					</div>

					<div class="col-md-6">
						<label asp-for="Telefone" class="form-label fw-bold"></label>
						<input asp-for="Telefone" class="form-control border-success shadow-sm" />
						<span asp-validation-for="Telefone" class="text-danger"></span>
					</div>

					<div class="col-md-6">
						<label asp-for="Email" class="form-label fw-bold"></label>
						<input asp-for="Email" class="form-control border-success shadow-sm" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>

					<div class="col-md-8">
						<label asp-for="Endereco" class="form-label fw-bold"></label>
						<input asp-for="Endereco" class="form-control border-success shadow-sm" />
						<span asp-validation-for="Endereco" class="text-danger"></span>
					</div>

					<div class="col-md-4">
						<label asp-for="DataCadastro" class="form-label fw-bold"></label>
						<input asp-for="DataCadastro" class="form-control border-success shadow-sm" />
						<span asp-validation-for="DataCadastro" class="text-danger"></span>
					</div>

				</div>

				<div class="d-flex gap-3 mt-4">
					<button type="submit"
							class="btn btn-success px-4 py-2 fw-bold"
							style="box-shadow:0 0 12px #00ff0a;">
						<i class="bi bi-check-lg"></i> Salvar Alterações
					</button>

					<a asp-action="Index" class="btn btn-secondary px-4 py-2">
						<i class="bi bi-arrow-left"></i> Voltar
					</a>
				</div>

			</form>

		</div>
	</div>

</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
