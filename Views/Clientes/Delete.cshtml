@model App_BodyCorp.Models.Cliente

@{
	ViewData["Title"] = "Excluir Cliente";
}

<div class="container mt-5">

	<h1 class="fw-bold mb-4"
		style="color:#000; text-shadow:0 0 8px #00ff0a, 0 0 15px #00ff0a;">
		Excluir Cliente
	</h1>

	<div class="alert alert-danger border-danger shadow"
		 style="font-size:1.2rem; font-weight:bold;">
		Tem certeza que deseja excluir este cliente?
		<br />
		<span style="font-size:0.95rem;">Essa ação não pode ser desfeita.</span>
	</div>

	<div class="card shadow-lg border-0 rounded-4 mb-4">
		<div class="card-body">

			<h4 class="fw-bold mb-3" style="color:#0aff0a;">Dados do Cliente</h4>

			<dl class="row">

				<dt class="col-sm-3 fw-bold">Nome</dt>
				<dd class="col-sm-9">@Model.ClienteNome</dd>

				<dt class="col-sm-3 fw-bold">CNPJ</dt>
				<dd class="col-sm-9">@Model.CNPJ</dd>

				<dt class="col-sm-3 fw-bold">Telefone</dt>
				<dd class="col-sm-9">@Model.Telefone</dd>

				<dt class="col-sm-3 fw-bold">Email</dt>
				<dd class="col-sm-9">@Model.Email</dd>

				<dt class="col-sm-3 fw-bold">Endereço</dt>
				<dd class="col-sm-9">@Model.Endereco</dd>

				<dt class="col-sm-3 fw-bold">Data de Cadastro</dt>
				<dd class="col-sm-9">@Model.DataCadastro.ToShortDateString()</dd>

			</dl>

		</div>
	</div>

	<form asp-action="Delete" class="d-flex gap-3">
		<input type="hidden" asp-for="ClienteId" />

		<button type="submit" class="btn btn-danger px-4 py-2 fw-bold"
				style="box-shadow:0 0 10px red;">
			<i class="bi bi-trash"></i> Excluir
		</button>

		<a asp-action="Index" class="btn btn-secondary px-4 py-2">
			<i class="bi bi-arrow-left"></i> Voltar
		</a>
	</form>

</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
