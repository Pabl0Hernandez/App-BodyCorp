@model App_BodyCorp.Models.Compra

@{
	ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Compra</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<input type="hidden" asp-for="DataCompra" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="ClienteId" class="control-label"></label>
				<select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
			</div>
			<div class="form-group">
				<input type="hidden" value="0" asp-for="ValorTotal" class="form-control" />

			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Incluir Itens </button>
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
